<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Forumus">

        <!-- File Provider for camera images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Login Activity -->
        <activity
            android:name=".ui.auth.login.LoginActivity"
            android:exported="false" />

        <!-- Verification Activity -->
        <activity
            android:name=".ui.auth.verification.VerificationActivity"
            android:exported="false" />

        <!-- Success Activity -->
        <activity
            android:name=".ui.auth.success.SuccessActivity"
            android:exported="false" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.auth.register.RegisterActivity"
            android:exported="false" />

        <!-- Home Activity -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false" />

        <!-- Chats Activity -->
        <activity
            android:name=".ui.chats.ChatsActivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />

        <!-- Post Detail Activity -->
        <activity
            android:name=".ui.post.detail.PostDetailActivity"
            android:exported="false" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".ui.auth.forgotPassword.ForgotPasswordActivity"
            android:exported="false" />

        <!-- Reset Password Activity -->
        <activity
            android:name=".ui.auth.resetPassword.ResetPasswordActivity"
            android:exported="false" />

        <!-- Conversation Activity -->
        <activity
            android:name=".ui.conversation.ConversationActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <!-- Fullscreen Image Activity -->
        <activity
            android:name=".ui.image.FullscreenImageActivity"
            android:theme="@style/Theme.Forumus.Fullscreen"
            android:exported="false" />

        <!-- Slide Activity -->
        <activity
            android:name=".ui.onboarding.slide.SlideActivity"
            android:exported="false" />

        <!-- Welcome Activity -->
        <activity
            android:name=".ui.onboarding.welcome.WelcomeActivity"
            android:exported="false" />

        <!-- Splash Activity as Launcher -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>