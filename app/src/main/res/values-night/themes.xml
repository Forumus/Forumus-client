<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme Configuration -->
    <style name="Base.Theme.Forumus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background Colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="backgroundColor">#121212</item>
        <item name="android:windowBackground">#121212</item>
        
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">#3D5AFE</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_tonal</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Splash Theme for Dark Mode -->
    <style name="SplashTheme" parent="Theme.Forumus">
        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>