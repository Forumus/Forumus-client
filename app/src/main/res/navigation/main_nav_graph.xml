<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">


    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <action
        android:id="@+id/action_global_postDetailFragment"
        app:destination="@id/postDetailFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <action
        android:id="@+id/action_global_conversationFragment"
        app:destination="@id/conversationFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hcmus.forumus_client.ui.home.HomeFragment"
        android:label="Home">
    </fragment>

    <!-- Post Detail Fragment -->
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.hcmus.forumus_client.ui.post.detail.PostDetailFragment"
        android:label="Post Detail">
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.hcmus.forumus_client.ui.profile.ProfileFragment"
        android:label="Profile">
        <argument
            android:name="userId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.hcmus.forumus_client.ui.settings.SettingsFragment"
        android:label="Settings">
    </fragment>

    <!-- Edit Profile Fragment -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.hcmus.forumus_client.ui.profile.EditProfileFragment"
        android:label="Settings">
    </fragment>

    <!-- Create Post Fragment -->
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.hcmus.forumus_client.ui.post.create.CreatePostFragment"
        android:label="CreatePost">
    </fragment>

    <!-- Chats Fragment -->
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.hcmus.forumus_client.ui.chats.ChatsFragment"
        android:label="Chats">

        <action
            android:id="@+id/action_chatsFragment_to_conversationFragment"
            app:destination="@id/conversationFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>

    <!-- Conversation Fragment -->
    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.hcmus.forumus_client.ui.conversation.ConversationFragment"
        android:label="Conversation">
        <argument
            android:name="id"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="contactName"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="profilePictureUrl"
            app:argType="string"
            android:defaultValue=""
            app:nullable="true"/>
    </fragment>

    <!-- Search Fragment -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.hcmus.forumus_client.ui.search.SearchFragment"
        android:label="Search">
    </fragment>

</navigation>
