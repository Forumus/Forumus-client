<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="2dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="1dp">

    <!-- Author Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/authorInfoContainer"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Author Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/authorAvatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_avatar"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:layout_marginEnd="8dp"/>

        <!-- Author Name -->
        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textSize="12sp"
            android:textColor="#2C2C2C"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="8dp"/>

        <!-- Separator Dot -->
        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢"
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="8dp"/>

        <!-- Time -->
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/montserrat_regular" />
    </LinearLayout>

    <!-- Post Content Section -->
    <LinearLayout
        android:id="@+id/postContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <!-- Post Title -->
        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Post Title"
            android:textColor="#2C2C2C"
            android:layout_marginBottom="10dp"
            android:textSize="16sp" />

        <!-- Post Content -->
        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Excited to announce that registration for our annual Tech Fest is now open! Early bird discount available for the first 100 students."
            android:textColor="#666666"
            android:textSize="13sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPostImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="10dp"/>

    <!-- Action Bar Section -->
    <LinearLayout
        android:id="@+id/actionBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Upvote & Downvote Section -->
        <LinearLayout
            android:id="@+id/upvoteDownvoteContainer"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_background_light"
            android:paddingHorizontal="8dp">

            <!-- Upvote Icon -->
            <ImageButton
                android:id="@+id/upvoteIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_upvote"
                android:scaleType="fitCenter"
                android:layout_marginEnd="15dp"
                app:tint="#666666"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- Upvote Count -->
            <TextView
                android:id="@+id/upvoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="13sp"
                android:textColor="#666666"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="15dp" />

            <!-- Downvote Icon -->
            <ImageButton
                android:id="@+id/downvoteIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_downvote"
                android:scaleType="fitCenter"
                app:tint="#666666"
                tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>

        <!-- Reply & Share Section -->
        <LinearLayout
            android:id="@+id/replyShareContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <!-- Reply Button -->
            <LinearLayout
                android:id="@+id/replyButton"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_background_light"
                android:paddingHorizontal="13dp"
                android:layout_marginEnd="8dp">

                <!-- Reply Icon -->
                <ImageView
                    android:id="@+id/replyIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_comment"
                    app:tint="#666666"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="6dp"/>

                <!-- Reply Count -->
                <TextView
                    android:id="@+id/replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"/>
            </LinearLayout>

            <!-- Share Button -->
            <LinearLayout
                android:id="@+id/shareButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/button_background_light">

                <!-- Share Icon -->
                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_share"
                    app:tint="#666666"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>