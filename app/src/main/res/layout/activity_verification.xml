<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:paddingHorizontal="30dp"
    android:paddingTop="60dp"
    android:paddingBottom="32dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_back_background"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/nanum_myeongjo_regular"
        android:text="@string/almost_there"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/montserrat_medium"
        android:lineSpacingExtra="4dp"
        android:text="@string/verification_description"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- OTP Input Container -->
    <LinearLayout
        android:id="@+id/ll_otp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description">

        <EditText
            android:id="@+id/et_otp_1"
            style="@style/OtpDigitStyle"
            android:layout_marginEnd="8dp"
            android:autofillHints="otp_digit_1"
            android:nextFocusForward="@id/et_otp_2" />

        <EditText
            android:id="@+id/et_otp_2"
            style="@style/OtpDigitStyle"
            android:layout_marginEnd="8dp"
            android:autofillHints="otp_digit_2"
            android:nextFocusForward="@id/et_otp_3" />

        <EditText
            android:id="@+id/et_otp_3"
            style="@style/OtpDigitStyle"
            android:layout_marginEnd="8dp"
            android:autofillHints="otp_digit_3"
            android:nextFocusForward="@id/et_otp_4" />

        <EditText
            android:id="@+id/et_otp_4"
            style="@style/OtpDigitStyle"
            android:layout_marginEnd="8dp"
            android:autofillHints="otp_digit_4"
            android:nextFocusForward="@id/et_otp_5" />

        <EditText
            android:id="@+id/et_otp_5"
            style="@style/OtpDigitStyle"
            android:layout_marginEnd="8dp"
            android:autofillHints="otp_digit_5"
            android:nextFocusForward="@id/et_otp_6" />

        <EditText
            android:id="@+id/et_otp_6"
            android:autofillHints="otp_digit_6"
            style="@style/OtpDigitStyle" />

    </LinearLayout>

    <!-- Verify Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_primary_background"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textColor="@color/background_light"
        android:textSize="20sp"
        android:elevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_otp_container" />

    <!-- Verify Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar_verify"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminateTint="@color/background_light"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btn_verify"
        app:layout_constraintEnd_toEndOf="@id/btn_verify"
        app:layout_constraintStart_toStartOf="@id/btn_verify"
        app:layout_constraintTop_toTopOf="@id/btn_verify" />

    <!-- Didn't receive code text -->
    <TextView
        android:id="@+id/tv_didnt_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textStyle="bold"
        android:text="@string/didnt_receive_code"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_verify" />

    <!-- Resend timer text -->
    <TextView
        android:id="@+id/tv_resend_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/request_new_code_timer"
        android:textColor="@color/hint_text"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_didnt_receive" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>