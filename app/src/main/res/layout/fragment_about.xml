<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light">

        <!-- Header with back button -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/surface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="About Forumus"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <!-- Scrollable content area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo/Icon section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="32dp">

                    <!-- Logo -->
                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/app_logo"
                        android:src="@drawable/ic_logo_dark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Forumus"
                        android:textSize="32sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/nanum_myeongjo_regular"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Academic Discussion Platform"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/montserrat_regular" />
                </LinearLayout>

                <!-- Main description card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="1dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="About This Platform"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:lineSpacingExtra="4dp"
                            android:text="Forumus is an internal online forum developed specifically for members of the University of Science – Vietnam National University Ho Chi Minh City."
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:lineSpacingExtra="4dp"
                            android:text="The platform is designed to provide a safe, professional, and friendly academic discussion space where students, lecturers, and academic staff can connect and collaborate."
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Features card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="1dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Key Features"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginBottom="16dp" />

                        <!-- Feature item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_share"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Share academic information and resources"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/montserrat_regular"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>

                        <!-- Feature item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chat"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Discuss learning and research-related topics"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/montserrat_regular"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>

                        <!-- Feature item 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_community"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Support and help each other throughout study and research"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/montserrat_regular"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Development team card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="1dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Development Team"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Developed by:"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/montserrat_regular" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Forumus Development Team"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/montserrat_medium" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Affiliation:"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/montserrat_regular" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="University of Science – Vietnam National University Ho Chi Minh City"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/montserrat_medium" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Legal information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/rounded_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="© 2025 Forumus Development Team"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This application is developed for academic purposes only and is not intended for commercial use."
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
