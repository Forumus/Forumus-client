<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:id="@+id/ll_message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <!-- Message container aligned to right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginStart="64dp">

        <!-- Message bubble -->
        <LinearLayout
            android:id="@+id/ll_message_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_sent_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            android:minWidth="50dp"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/tv_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_sent_placeholder"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="6dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <com.hcmus.forumus_client.ui.conversation.MessageImagesView
            android:id="@+id/message_images_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingTop="12dp"
            android:layout_gravity="end"/>

        <!-- Shared Post Preview (inflated dynamically when needed) -->
        <ViewStub
            android:id="@+id/stub_shared_post"
            android:inflatedId="@+id/card_shared_post"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout="@layout/view_shared_post_preview"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp" />


        <!-- Timestamp -->
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_sent_time"
            android:textSize="12sp"
            android:textColor="@color/chat_time_gray"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end" />

    </LinearLayout>

</LinearLayout>

</layout>