<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Header with title and search icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="22dp"
        android:paddingTop="14dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chats"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp" />

    </LinearLayout>

    <!-- Filter buttons (All / Unread) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/chat_filter_container_background"
        android:orientation="horizontal"
        android:padding="6dp">

        <!-- All button (selected) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/chat_filter_button_selected_background"
            android:elevation="2dp"
            android:gravity="center"
            android:layout_marginEnd="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/montserrat_regular" />

        </LinearLayout>

        <!-- Unread button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unread"
                android:textSize="16sp"
                android:textColor="#4a5565"
                android:fontFamily="@font/montserrat_regular" />

        </LinearLayout>

    </LinearLayout>

    <!-- Chat messages list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>

</layout>