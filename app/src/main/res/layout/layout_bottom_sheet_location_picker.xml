<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface"
    android:paddingTop="16dp"
    android:fitsSystemWindows="true">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@color/divider"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_location"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"/>

    <LinearLayout
        android:id="@+id/btnSearchPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_input_area"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@color/text_secondary_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_location_hint"
            android:textColor="@color/text_secondary_light"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNearbyPlaces"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="8dp"
        android:background="@color/surface">

        <Button
            android:id="@+id/btnAddLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/add_location"
            android:backgroundTint="@color/primary"
            android:textColor="#FFFFFF"
            android:enabled="false"/>

        <TextView
            android:id="@+id/tvPreviewMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preview_on_map"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:alpha="0.3"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>