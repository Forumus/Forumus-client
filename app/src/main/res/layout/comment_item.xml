<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/commentItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="2dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="6dp"
    android:layout_marginBottom="1dp">

    <!-- Author Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/authorInfoContainer"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <!-- Author Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/authorAvatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_avatar"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:layout_marginEnd="8dp"/>

        <!-- Author Name -->
        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textSize="12sp"
            android:textColor="#2C2C2C"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="8dp"/>

        <!-- Separator Dot -->
        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•"
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="8dp"/>

        <!-- Time -->
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/montserrat_regular" />
    </LinearLayout>

    <!-- Comment Content Section -->
    <LinearLayout
        android:id="@+id/commentContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">

        <!-- Comment Title -->
        <LinearLayout
            android:id="@+id/commentTitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- ORIGINAL POSTER -->
            <TextView
                android:id="@+id/tvOriginalPoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORIGINAL POSTER"
                android:textStyle="bold"
                android:textColor="#2B72FF"
                android:layout_marginEnd="4dp"
                android:textSize="11sp" />

            <!-- reply -->
            <TextView
                android:id="@+id/tvReplyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reply"
                android:textColor="#666666"
                android:layout_marginEnd="4dp"
                android:textSize="11sp" />

            <!-- User B -->
            <TextView
                android:id="@+id/replyToUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous"
                android:textColor="#151515"
                android:textStyle="bold"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Comment Content -->
        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="this is almost the exact post i was looking for thank you!! i’ve seen this before but i couldn’t remember everything on the list."
            android:textColor="#666666"
            android:layout_marginBottom="0dp"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- Action Bar Section -->
    <LinearLayout
        android:id="@+id/actionBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Upvote & Downvote Section -->
        <LinearLayout
            android:id="@+id/upvoteDownvoteContainer"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_background_light"
            android:paddingHorizontal="8dp">

            <!-- Upvote Icon -->
            <ImageButton
                android:id="@+id/upvoteIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_upvote"
                android:scaleType="fitCenter"
                android:layout_marginEnd="15dp"
                app:tint="#666666"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- Upvote Count -->
            <TextView
                android:id="@+id/upvoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="13sp"
                android:textColor="#666666"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="15dp" />

            <!-- Downvote Icon -->
            <ImageButton
                android:id="@+id/downvoteIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_downvote"
                android:scaleType="fitCenter"
                app:tint="#666666"
                tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>

        <!-- Reply & Share Section -->
        <LinearLayout
            android:id="@+id/replyShareContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <!-- Reply Button -->
            <LinearLayout
                android:id="@+id/replyButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_background_light"
                android:paddingHorizontal="13dp">

                <!-- Reply Icon -->
                <ImageView
                    android:id="@+id/replyIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_comment"
                    app:tint="#666666"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="6dp"/>

                <!-- Reply Count -->
                <TextView
                    android:id="@+id/replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>