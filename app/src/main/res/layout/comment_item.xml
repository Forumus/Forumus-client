<?xml version="1.0" encoding="utf-8"?>
<!-- Comment Item - Optimized for threaded discussions -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/commentItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/surface"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- Indentation Spacer (for nested replies) -->
    <Space
        android:id="@+id/indentationSpace"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <!-- Vertical Thread Line (for replies) -->
    <View
        android:id="@+id/threadLine"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:layout_marginEnd="12dp"
        android:visibility="gone"/>

    <!-- Comment Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Author Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Small Author Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/authorAvatar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_avatar"
                app:shapeAppearanceOverlay="@style/CircleImage"
                android:layout_marginEnd="8dp"/>

            <!-- Author Name -->
            <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginEnd="6dp"/>

            <!-- OP Badge (subtle) -->
            <TextView
                android:id="@+id/opBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OP"
                android:textSize="10sp"
                android:textColor="#2196F3"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:background="@drawable/op_badge_background"
                android:layout_marginEnd="6dp"
                android:visibility="gone"/>

            <!-- Dot Separator -->
            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:textSize="11sp"
                android:textColor="#BBBBBB"
                android:layout_marginEnd="6dp"/>

            <!-- Time -->
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_light"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <!-- Reply Context (if replying to someone) -->
        <LinearLayout
            android:id="@+id/replyContextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replying to"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/replyToUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:fontFamily="@font/montserrat_medium"/>

        </LinearLayout>

        <!-- Comment Text - Primary Focus -->
        <TextView
            android:id="@+id/commentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="this is almost the exact post i was looking for thank you!! i've seen this before but i couldn't remember everything on the list."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="10dp"/>

        <!-- Minimal Action Buttons -->
        <LinearLayout
            android:id="@+id/actionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Upvote Button (minimal) -->
            <ImageButton
                android:id="@+id/upvoteIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_upvote"
                android:scaleType="fitCenter"
                android:padding="2dp"
                app:tint="@color/text_secondary_light"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- Upvote Count -->
            <TextView
                android:id="@+id/upvoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_light"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:minWidth="18dp"/>

            <!-- Downvote Button (minimal) -->
            <ImageButton
                android:id="@+id/downvoteIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_downvote"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/text_secondary_light"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- Reply Button (minimal) -->
            <ImageButton
                android:id="@+id/replyButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_comment"
                android:scaleType="fitCenter"
                android:padding="2dp"
                app:tint="@color/text_secondary_light"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- Reply Count -->
            <TextView
                android:id="@+id/replyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_light"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginStart="4dp"
                android:minWidth="18dp"/>

        </LinearLayout>

        <!-- View Replies Button (shows when there are nested replies) -->
        <LinearLayout
            android:id="@+id/viewRepliesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <!-- Horizontal line before text -->
            <View
                android:layout_width="24dp"
                android:layout_height="2dp"
                android:background="@color/divider"
                android:layout_marginEnd="8dp"/>

            <!-- View replies text -->
            <TextView
                android:id="@+id/viewRepliesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View 3 replies"
                android:textSize="13sp"
                android:textColor="#2196F3"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginEnd="4dp"/>

            <!-- Chevron icon -->
            <ImageView
                android:id="@+id/viewRepliesChevron"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_chevron_down"
                android:scaleType="fitCenter"
                app:tint="#2196F3"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>