<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light">

        <!-- Header with back button -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/surface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Community Guidelines"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <!-- Scrollable content area -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- Hero section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_logo"
                        android:contentDescription="@string/community_guidelines_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Building a Respectful\nAcademic Community"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="These guidelines help maintain a safe, professional, and friendly environment for all members of our academic community."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/montserrat_regular"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Guidelines RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_guidelines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_guideline_section" />

                <!-- Footer section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last updated: January 2026"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Questions? Contact us"
                        android:textSize="13sp"
                        android:textColor="@color/link_color"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
