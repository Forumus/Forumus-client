<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <!-- Message container aligned to left -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_marginEnd="64dp">

        <!-- Message bubble -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_received_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp"
            android:minWidth="50dp"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/tv_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey! How are you doing?"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="6dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <com.hcmus.forumus_client.ui.conversation.MessageImagesView
            android:id="@+id/message_images_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingTop="12dp"
            android:layout_gravity="start" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM"
            android:textSize="12sp"
            android:textColor="@color/chat_time_gray"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

</layout>