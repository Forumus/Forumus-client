<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface"
    android:paddingTop="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tvShareTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_post_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvShareDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_post_description"
            android:textSize="14sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Search Section (Optional - for filtering recipients) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/etSearchRecipient"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/search_contacts_hint"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

    </FrameLayout>

    <!-- Recipients List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShareRecipients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="400dp"
        android:layout_marginTop="8dp" />

    <!-- Selection Counter Section -->
    <LinearLayout
        android:id="@+id/llSelectionCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/input_background"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:text="@string/contacts_selected_format"
            android:id="@+id/tvSelectionCount"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/ivClearSelection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="@string/clear_selection_desc"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:spacing="8dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/button_outline_background_blue"
            android:minWidth="100dp"
            android:text="@string/cancel_action"
            android:textColor="@color/text_primary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_share_post_background_gray"
            android:minWidth="100dp"
            android:text="@string/share_action"
            android:elevation="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingHorizontal="24dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/background_light"
            app:layout_constraintHorizontal_bias="0.0"/>

    </LinearLayout>

</LinearLayout>
