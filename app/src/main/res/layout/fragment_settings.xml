<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Root container for Settings screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light">

        <!-- Header with back button -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Settings"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <View
            android:id="@+id/v_header_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A000000" />

        <!-- Main scrollable content area -->
        <ScrollView
            android:id="@+id/sv_settings_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <!-- Container for all settings sections -->
            <LinearLayout
                android:id="@+id/ll_settings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- User profile header card -->
                <LinearLayout
                    android:id="@+id/ll_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">

                    <!-- Circular user avatar image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_user_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        tools:src="@drawable/default_avatar" />

                    <!-- User information text container -->
                    <LinearLayout
                        android:id="@+id/ll_user_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <!-- User full name -->
                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- User email or username -->
                        <TextView
                            android:id="@+id/tv_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23xxxxxx@student.forumus.me"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center_vertical" />

                        <!-- User status or bio -->
                        <TextView
                            android:id="@+id/tv_user_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Horizontal divider separating profile from sections -->
                <View
                    android:id="@+id/v_profile_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000" />

                <!-- Account settings section -->
                <LinearLayout
                    android:id="@+id/ll_account_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:background="@color/white">

                    <!-- Section header label -->
                    <TextView
                        android:id="@+id/tv_account_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="ACCOUNT"
                        android:textSize="14sp"
                        android:textColor="@color/text_tertiary"/>

                    <!-- View profile button -->
                    <LinearLayout
                        android:id="@+id/ll_view_profile"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_view_profile_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_view_profile"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/view_profile"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Right arrow navigation indicator -->
                        <ImageView
                            android:id="@+id/iv_view_profile_chevron"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:scaleType="centerInside"/>

                    </LinearLayout>

                    <!-- Horizontal divider between menu items -->
                    <View
                        android:id="@+id/v_account_divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="1.32dp"
                        android:layout_marginStart="38dp"
                        android:background="#1A000000" />

                    <!-- Edit profile button -->
                    <LinearLayout
                        android:id="@+id/ll_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_edit_profile_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_edit_profile"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/edit_profile"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Right arrow navigation indicator -->
                        <ImageView
                            android:id="@+id/iv_edit_profile_chevron"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:scaleType="centerInside"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Horizontal divider separating sections -->
                <View
                    android:id="@+id/v_section_divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000" />

                <!-- Preferences settings section -->
                <LinearLayout
                    android:id="@+id/ll_preferences_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:background="@color/white">

                    <!-- Section header label -->
                    <TextView
                        android:id="@+id/tv_preferences_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="PREFERENCES"
                        android:textSize="14sp"
                        android:textColor="@color/text_tertiary"/>

                    <!-- Dark mode toggle item -->
                    <LinearLayout
                        android:id="@+id/ll_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_dark_mode_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_dark_mode"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_dark_mode"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/dark_mode"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Toggle switch control -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sw_dark_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="@color/white" />

                    </LinearLayout>

                    <!-- Horizontal divider between menu items -->
                    <View
                        android:id="@+id/v_preferences_divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="1.32dp"
                        android:layout_marginStart="38dp"
                        android:background="#1A000000" />

                    <!-- Push notifications toggle item -->
                    <LinearLayout
                        android:id="@+id/ll_push_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_push_notifications_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_push_notifications"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_push_notifications"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="Push Notifications"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Toggle switch control -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sw_push_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="@color/white" />

                    </LinearLayout>

                    <!-- Horizontal divider between menu items -->
                    <View
                        android:id="@+id/v_preferences_divider_2"
                        android:layout_width="match_parent"
                        android:layout_height="1.32dp"
                        android:layout_marginStart="38dp"
                        android:background="#1A000000" />

                    <!-- Email notifications toggle item -->
                    <LinearLayout
                        android:id="@+id/ll_email_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_email_notifications_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_email_notifications"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_email_notifications"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="Email Notifications"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Toggle switch control -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sw_email_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Content settings section -->
                <LinearLayout
                    android:id="@+id/ll_content_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:background="@color/white">

                    <!-- Section header label -->
                    <TextView
                        android:id="@+id/tv_content_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="CONTENT"
                        android:textSize="14sp"
                        android:textColor="@color/text_tertiary"/>

                    <!-- Saved posts item -->
                    <LinearLayout
                        android:id="@+id/ll_saved_posts"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_saved_posts_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_saved_posts"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_saved_posts"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="Saved Posts"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Right arrow navigation indicator -->
                        <ImageView
                            android:id="@+id/iv_saved_posts_chevron"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:scaleType="centerInside"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Horizontal divider separating sections -->
                <View
                    android:id="@+id/v_section_divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000" />

                <!-- Support settings section -->
                <LinearLayout
                    android:id="@+id/ll_support_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:background="@color/white">

                    <!-- Section header label -->
                    <TextView
                        android:id="@+id/tv_support_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="SUPPORT"
                        android:textSize="14sp"
                        android:textColor="@color/text_tertiary"/>

                    <!-- Help center item -->
                    <LinearLayout
                        android:id="@+id/ll_help_center"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_help_center_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_help_center"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_help_center"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="Help Center"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Right arrow navigation indicator -->
                        <ImageView
                            android:id="@+id/iv_help_center_chevron"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:scaleType="centerInside"/>

                    </LinearLayout>

                    <!-- Horizontal divider between menu items -->
                    <View
                        android:id="@+id/v_support_divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="1.32dp"
                        android:layout_marginStart="38dp"
                        android:background="#1A000000" />

                    <!-- Community guidelines item -->
                    <LinearLayout
                        android:id="@+id/ll_community_guidelines"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_community_guidelines_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_community_guidelines"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_community_guidelines"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="Community Guidelines"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Right arrow navigation indicator -->
                        <ImageView
                            android:id="@+id/iv_community_guidelines_chevron"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:scaleType="centerInside"/>

                    </LinearLayout>

                    <!-- Horizontal divider between menu items -->
                    <View
                        android:id="@+id/v_support_divider_2"
                        android:layout_width="match_parent"
                        android:layout_height="1.32dp"
                        android:layout_marginStart="38dp"
                        android:background="#1A000000" />

                    <!-- About forumus item -->
                    <LinearLayout
                        android:id="@+id/ll_about_forumus"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon with background container -->
                        <ImageView
                            android:id="@+id/iv_about_forumus_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_about_forumus"
                            android:scaleType="centerInside"/>

                        <!-- Menu item label text -->
                        <TextView
                            android:id="@+id/tv_about_forumus"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="About Forumus"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center_vertical" />

                        <!-- Right arrow navigation indicator -->
                        <ImageView
                            android:id="@+id/iv_about_forumus_chevron"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:scaleType="centerInside"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Logout button action -->
                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:background="@drawable/logout_button_bg">

                    <!-- Logout icon -->
                    <ImageView
                        android:id="@+id/iv_logout_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_logout"
                        android:scaleType="centerInside"/>

                    <!-- Logout text label -->
                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="Log Out"
                        android:textSize="16sp"
                        android:textColor="@color/logout_text"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <!-- Footer information section -->
                <LinearLayout
                    android:id="@+id/ll_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center">

                    <!-- App version text -->
                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_tertiary"
                        android:text="Forumus v1.0.0" />

                    <!-- Copyright text -->
                    <TextView
                        android:id="@+id/tv_copyright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_tertiary"
                        android:text="Â© 2025 Forumus Community" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>