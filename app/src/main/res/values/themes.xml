<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Forumus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="android:windowBackground">#FFFFFF</item>
         <item name="colorPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Forumus" parent="Base.Theme.Forumus" />
    
    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.Forumus">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <!-- Fullscreen Image Theme -->
    <style name="Theme.Forumus.Fullscreen" parent="Theme.Forumus">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- OTP Digit Style -->
    <style name="OtpDigitStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/otp_digit_background</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Widget.App.Input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="boxStrokeColor">@color/stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipBackgroundColor">@color/bg_app</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.App.ButtonPrimary" parent="Widget.Material3.Button">
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.ButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.ButtonDiscard" parent="Widget.Material3.Button">
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/neutral_tonal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>