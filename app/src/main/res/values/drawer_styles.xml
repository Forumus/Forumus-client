<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="itemIconTint">@drawable/nav_item_icon_tint</item>
        <item name="itemBackground">?attr/selectableItemBackground</item>
        <item name="itemTextAppearance">@style/NavigationViewItemText</item>
    </style>

    <style name="NavigationViewItemText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DrawerStyle">
        <item name="android:background">@color/white</item>
    </style>
</resources>
